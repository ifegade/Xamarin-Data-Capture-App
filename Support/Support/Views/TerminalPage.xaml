                </StackLayout>
            </Grid>-->
            <Grid BackgroundColor="#cccccc">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid Margin="1" BackgroundColor="#F5F6F0">
                    <Label
                        Margin="5"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        Text="Sticker"
                        TextColor="#3373A1"
                        VerticalOptions="Center" />
                </Grid>
                <StackLayout
                    Grid.Row="1"
                    HorizontalOptions="Center"
                    Orientation="Horizontal">
                    <Label
                        Text="Ok"
                        VerticalOptions="Center"
                        VerticalTextAlignment="Center" />
                    <Switch x:Name="sticker" Toggled="sticker_Toggled" />
                    <Label
                        Text="Bad"
                        VerticalOptions="Center"
                        VerticalTextAlignment="Center" />
                </StackLayout>
            </Grid>
            <Grid Grid.Column="1" BackgroundColor="#cccccc">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid
                    Margin="1"
                    Padding="1"
                    BackgroundColor="#F5F6F0">
                    <Label
                        Margin="5"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        Text="Charger"
                        TextColor="#3373A1"
                        VerticalOptions="Center" />
                </Grid>
                <StackLayout
                    Grid.Row="1"
                    HorizontalOptions="Center"
                    Orientation="Horizontal">
                    <Label
                        Text="Ok"
                        VerticalOptions="Center"
                        VerticalTextAlignment="Center" />
                    <Switch x:Name="charger" Toggled="charger_Toggled" />
                    <Label
                        Text="Bad"
                        VerticalOptions="Center"
                        VerticalTextAlignment="Center" />
                </StackLayout>
            </Grid>
            <Grid Grid.Column="2" BackgroundColor="#cccccc">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid
                    Margin="1"
                    Padding="1"
                    BackgroundColor="#F5F6F0">
                    <Label
                        Margin="5"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        Text="Ref No."
                        TextColor="#3373A1"
                        VerticalOptions="Center" />
                </Grid>
                <StackLayout
                    Grid.Row="1"
                    HorizontalOptions="Center"
                    Orientation="Horizontal">
                    <Label
                        Text="Ok"
                        VerticalOptions="Center"
                        VerticalTextAlignment="Center" />
                    <Switch x:Name="ref" Toggled="ref_Toggled" />
                    <Label
                        Text="Bad"
                        VerticalOptions="Center"
                        VerticalTextAlignment="Center" />
                </StackLayout>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid BackgroundColor="#cccccc">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid
                    Margin="1"
                    Padding="1"
                    BackgroundColor="#F5F6F0">
                    <Label
                        Margin="5"
                        HorizontalOptions="Center"
                        Text="Bank Logo"
                        TextColor="#3373A1"
                        VerticalOptions="Center" />
                </Grid>
                <StackLayout
                    Grid.Row="1"
                    HorizontalOptions="Center"
                    Orientation="Horizontal">
                    <Label
                        Text="Ok"
                        VerticalOptions="Center"
                        VerticalTextAlignment="Center" />
                    <Switch x:Name="bank" Toggled="bank_Toggled" />
                    <Label
                        Text="Bad"
                        VerticalOptions="Center"
                        VerticalTextAlignment="Center" />
                </StackLayout>
            </Grid>
            <Grid Grid.Column="1" BackgroundColor="#cccccc">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid
                    Margin="1"
                    Padding="1"
                    BackgroundColor="#F5F6F0">
                    <Label
                        Margin="5"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        Text="Auth"
                        TextColor="#3373A1"
                        VerticalOptions="Center" />
                </Grid>
                <StackLayout
                    Grid.Row="1"
                    HorizontalOptions="Center"
                    Orientation="Horizontal">
                    <Label
                        Text="Ok"
                        VerticalOptions="Center"
                        VerticalTextAlignment="Center" />
                    <Switch x:Name="auth" Toggled="auth_Toggled" />
                    <Label
                        Text="Bad"
                        VerticalOptions="Center"
                        VerticalTextAlignment="Center" />
                </StackLayout>
            </Grid>
            <Grid Grid.Column="2" BackgroundColor="#cccccc">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid
                    Margin="1"
                    Padding="1"
                    BackgroundColor="#F5F6F0">
                    <Label
                        Margin="5"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        Text="Seq No."
                        TextColor="#3373A1"
                        VerticalOptions="Center" />
                </Grid>
                <StackLayout
                    Grid.Row="1"
                    HorizontalOptions="Center"
                    Orientation="Horizontal">
                    <Label
                        Text="Ok"
                        VerticalOptions="Center"
                        VerticalTextAlignment="Center" />
                    <Switch x:Name="seq" Toggled="seq_Toggled" />
                    <Label
                        Text="Bad"
                        VerticalOptions="Center"
                        VerticalTextAlignment="Center" />
                </StackLayout>
            </Grid>
        </Grid>
        <local:MyEntry
            x:Name="reason"
            Grid.Row="2"
            Margin="0,5"
            Placeholder="Comment" />
        <Button
            x:Name="submitResponse"
            Grid.Row="3"
            Margin="20"
            Clicked="submitResponse_Clicked"
            HorizontalOptions="FillAndExpand"
            Text="Submit" />
    </Grid>
</ContentPage>

